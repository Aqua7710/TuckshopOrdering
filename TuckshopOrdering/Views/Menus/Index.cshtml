@model MenuViewModel

@{
    ViewData["Title"] = "Index";
}

<script>
    let hotFood = true;
    let sandwich = false;
    let snack = false;
    let hotSnack = false;
    let drink = false;

    function HotFoodCat(){
        document.getElementById("categoryHeading").innerHTML = "Hot Food";
        hotFood = true;
    }

    function SandwichCat(){
        document.getElementById("categoryHeading").innerHTML = "Sandwiches";
        sandwich = true;
    }

    function SnackCat(){
        document.getElementById("categoryHeading").innerHTML = "Snacks";
        snack = true;
    }

    function HotSnackCat(){
        document.getElementById("categoryHeading").innerHTML = "Hot Snacks";
        hotSnack = true;
    }

    function DrinkCat(){
        document.getElementById("categoryHeading").innerHTML = "Drinks";
        drink = true;
    }
</script>

<div class="container">
    <div class="row">
        <div class="col-8">
            <div class="orderRectangle">
                <p>Your order ^</p>
            </div>
            <div class="container sticky">
                <div class="categoriesRow">
                    <button class="menuBtns" onclick="HotFoodCat()">Hot Food</button>
                    <button class="menuBtns" onclick="SandwichCat()">Sandwiches</button>
                    <button class="menuBtns" onclick="SnackCat()">Snacks</button>
                    <button class="menuBtns" onclick="HotSnackCat()">Hot Snacks</button>
                    <button class="menuBtns" onclick="DrinkCat()">Drinks</button>
                </div>
            </div>

            <h1 class="heading" id="categoryHeading">Hot Food</h1>

            <div class="menu">

                @foreach (var menuItem in Model._Menu)
                {
                    <div class="card cardStyle">
                          <div class="dropdown">
                             <a class="btn btn-secondary dropdown-toggle editBtn" href="#" role="button" id="editDropDown" data-bs-toggle="dropdown" aria-expanded="false" style="z-index: 5;">
                                 Edit
                             </a>
                                <ul class="dropdown-menu" aria-labelledby="editDropDown">
                                    <li><a asp-action="Edit" asp-route-id="@menuItem.MenuID" class="dropdown-item">Edit</a></li>
                                <li><a asp-action="Details" asp-route-id="@menuItem.MenuID" class="dropdown-item">Details</a></li>
                                <li><a asp-action="Delete" asp-route-id="@menuItem.MenuID" class="dropdown-item">Delete</a></li>
                            </ul>    
                          </div>
                        <div class="card-body">
                            <img class="card-img" src="@("~/Images/"+menuItem.imageName)" asp-append-version="true" style="width:100%; border-radius: 10px; height: 160px;">
                            <h4 class="card-title title">
                                @Html.DisplayFor(model => menuItem.foodName)
                            </h4>
                            <h6 class="card-subtitle subtitle">
                                $@Html.DisplayFor(model => menuItem.price)
                            </h6>
                            <div class="cardBtns">
                                <button type="button" class="customiseBtn" data-bs-toggle="modal" data-bs-target="#customiseModal">Customise</button>
                                <button class="addBtn">Add</button>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>

        <div class="col-4">
            <div class="ordersBox">
                <h1 style="text-align: center; padding: 10px;">Order:</h1>
                <form>
                    <div class="formLine">
                        <label>Student Name:</label> <!--Customer name from customers db-->
                        <input type="text" />
                    </div>
                    <div class="formLine">
                        <label>Room Number:</label> <!--Customers room from customers db-->
                        <input type="text" />
                    </div>
                </form>
                <div class="line">
                    <hr class="solid">
                </div>

                <!--Repeatable orders code-->

                <div class="orderItems">
                @foreach(var foodOrder in Model._FoodOrder)
                {
                        <div class="orderItem">
                            <p class="flexItem" style="margin-left: 20px;">@Html.DisplayFor(model => foodOrder.quantity)x @Html.DisplayFor(model => foodOrder.Menu.foodName)</p> <!--Item quantity and item name-->
                            <div class="modifyBtns">
                                <button class="orderItemBtn">-</button>
                                <button class="orderItemBtn">+</button>
                                @{
                                    decimal total = @foodOrder.Menu.price * foodOrder.quantity;
                                }
                                <p>$@total</p>                                  <!--Item price (dependant on quantity)-->
                                <a asp-action="Delete" asp-route-id="@foodOrder.FoodOrderID"><button class="orderItemBtn cancelBtn">X</button></a>
                                
                            </div>
                        </div>
                }
                </div>

                @{
                    decimal grandTotal = Model._FoodOrder.Sum(foodOrder => foodOrder.Menu.price * foodOrder.quantity);
                }

                <p style="margin-left: 20px; font-weight: bold;">Total Price: $@grandTotal</p>

                <div class="gridBtns">
                    <button type="button" class="gridBtnsItem" data-bs-toggle="modal" data-bs-target="#checkoutModal">Checkout</button>
                    <button type="button" class="gridBtnsItem" data-bs-toggle="modal" data-bs-target="#noteModal">Notes</button>
                    <button type="button" class="gridBtnsItem" data-bs-toggle="modal" data-bs-target="#deleteModal">Delete</button>
                </div>
            </div>
        </div>
    </div>
    <div style="display: flex; flex-direction: row-reverse;">
        <!--Back to top button-->
        <a href="#" class="top">Back to top ^</a>
    </div>
</div>

