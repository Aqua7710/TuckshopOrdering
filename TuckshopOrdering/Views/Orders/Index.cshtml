    <form asp-controller="Orders" asp-action="Index">
        <p>
            <input type="text" name="SearchString" />
        </p>
    </form>
</div>

<div class="card orderStyle">
    <div class="card-body">
        <h4 class="card-title">
            Prinesh Patel
