@model IEnumerable<TuckshopOrdering.Models.FoodOrder>

@{
    ViewData["Title"] = "Index";
}

<h1>Orders</h1>

@foreach(var item in Model)
{
	<div class="card" style="width: 18rem;">
		<div class="card-body">
			<h3 class="card-title">@item.Order.studentName</h3>
			<h5 class="card-subtitle">@item.Order.roomNumber</h5>
			@foreach(var foodItem in Model)
			{
				<div class="orderItem">
					<p class="flexItem" style="">@foodItem.quantity @foodItem.Menu.foodName</p> <!--Item quantity and item name-->
					<p class="price">$@foodItem.Menu.price</p> <!--Item price (dependant on quantity)-->
				</div>
			}
			<p class="orderItem">Total: $14.35</p>
			<div class="line" style="padding: 0;">
				<hr class="solid">
			</div>
			<p class="note">Note: this payment will be made at a later date via internet banking.</p>
			<p style="font-weight: bold; text-align: left;">Order Date: @item.Order.OrderDate</p>
			<div class="gridBtns" style="padding: 0;">
				<button class="gridBtnsItem">Edit</button>
				<button class="gridBtnsItem">Print</button>
			</div>
		</div>
	</div>
}

